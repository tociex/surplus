                            <th>
                                Unit Price
                            </th>
                             <th>
                                Value
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Uom)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Posisi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Luas)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Sloc)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Sbin)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.File_foto)
                            </th>
                            <th style="width:100px">Aksi </th>
                                        
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                                <tr>
                                  
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tgl_input)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Source_material)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Material_no)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Old_material)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Short_desc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Qty)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Qty)
                                    </td>
                                    <td> 0
                                        @* @Html.DisplayFor(modelItem => item.Qty) *@
                                    </td>
                                    <td> <span class='format'> @Html.DisplayFor(modelItem => item.Nilai)</span>
  
                                    </td>

                                     <td> <span class='format'> @Html.DisplayFor(modelItem => item.Nilai)</span>
  
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Uom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Posisi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Luas)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sloc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sbin)
                                    </td>
                                    <td>
                                        <img src="~/images/@item.File_foto"   
                                        class="rounded-circle"   
                                        height="40" width="40"   
                                        asp-append-version="true" /> 
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-sm btn-primary" style="color:white"><i class="glyphicon glyphicon-pencil"></i></a> 
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success"><i class="glyphicon glyphicon-eye-open"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
                                    </td>
                                 
                                    
                                </tr>
                        }
                       
                           
                    </tbody>
                
                </table>
        </div>
	</div>
</div>
<script type="text/javascript">
		function addCommas(nStr)
    {
       nStr += '';
       x = nStr.split('.');
       x1 = x[0];
       x2 = x.length > 1 ? '.' + x[1] : '';
       var rgx = /(\d+)(\d{3})/;
       while (rgx.test(x1)) {
          x1 = x1.replace(rgx, '$1' + ',' + '$2');
       }
       return x1 + x2;
    }

$(function(){
   $(".format").each(function(c, obj){
      $(obj).text('Rp. ' + addCommas(parseFloat($(obj).text()).toFixed(2)));
   });
});
	</script>
<script>
   $(document).ready(function() {
    // Setup - add a text input to each footer cell
    $('#example thead tr').clone(true).appendTo( '#example thead' );
    $('#example thead tr:eq(1) th').each( function (i) {
        var title = $(this).text();
        $(this).html( '<input type="text" placeholder="Search '+title+'" />' );
 
        $( 'input', this ).on( 'keyup change', function () {
            if ( table.column(i).search() !== this.value ) {
                table
                    .column(i)
                    .search( this.value )
                    .draw();
            }
        } );
    } );
 
    var table = $('#example').DataTable( {
        orderCellsTop: true,
        fixedHeader: true
    } );
} );
</script>


