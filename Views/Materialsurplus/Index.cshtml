@model IEnumerable<materialsurplus.Models.Materialsurplus>

@{
    ViewData["Title"] = "Material Surplus";
}



<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<div class="container">

    <h3>Material Surplus</h3>

    <a asp-action="Create" class="btn btn-success"style="color:white"><i class="glyphicon glyphicon-plus"></i> Add Material</a>
    <a asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-refresh"></i> Reload</a>
  
  
  <br/>
    <br/>
    <div class="row">
        <div class="table-responsive">

                <table id="table" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                           
                            <th>
                                @Html.DisplayNameFor(model => model.Tgl_input)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Source_material)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Material_no)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Old_material)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Short_desc)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Qty)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nilai)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Uom)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Posisi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Luas)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Sloc)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Sbin)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.File_foto)
                            </th>
                            <th style="width:100px">Aksi </th>
                                        
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                                <tr>
                                  
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tgl_input)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Source_material)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Material_no)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Old_material)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Short_desc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Qty)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nilai)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Uom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Posisi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Luas)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sloc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sbin)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.File_foto)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-sm btn-primary" style="color:white"><i class="glyphicon glyphicon-pencil"></i></a> 
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success"><i class="glyphicon glyphicon-eye-open"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
                                    </td>
                                 
                                    
                                </tr>
                        }
                       
                           
                    </tbody>
                
                </table>
        </div>
	</div>
</div>




