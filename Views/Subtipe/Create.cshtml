@model subtipe.Models.Subtipe

@{
    ViewData["Title"] = "Create";
}

<h4>Master Subtipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
          <div class="form-group">
                <label asp-for="Id_tipe" class="control-label"></label>
                <select asp-for="Id_tipe"
                asp-items="@( new SelectList(ViewBag.Departments,"Id","Nama_tipe"))" 
                class="form-control"></select>
                <span asp-validation-for="Id_tipe" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="Kode_subtipe" class="control-label"></label>
                <input asp-for="Kode_subtipe" class="form-control" />
                <span asp-validation-for="Kode_subtipe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sub_tipe" class="control-label"></label>
                <input asp-for="Sub_tipe" class="form-control" />
                <span asp-validation-for="Sub_tipe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                 <a asp-action="Index" class="btn btn-danger">Back </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
