@model tipe.Models.Tipe

@{
    ViewData["Title"] = "Edit";
}


<h4>Master Tipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Kode_tipe" class="control-label"></label>
                <input asp-for="Kode_tipe" class="form-control" />
                <span asp-validation-for="Kode_tipe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nama_tipe" class="control-label"></label>
                <input asp-for="Nama_tipe" class="form-control" />
                <span asp-validation-for="Nama_tipe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                 <a asp-action="Index" class="btn btn-danger">Back</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
