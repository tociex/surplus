@model IEnumerable<pengambilan.Models.Pengambilan>

@{
    ViewData["Title"] = "Index";
}


<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<div class="container">

    <h3>Pengambilan Material</h3>
     <a onclick="location.href = '../Home/Scan';"  class="btn btn-success" style="color:white; float:right; margin-bottom:2px"><i class="glyphicon glyphicon-barcode"></i> Scan Pengambilan</a>
    
    <a asp-action="Create" class="btn btn-success"style="color:white"><i class="glyphicon glyphicon-plus"></i> Input Pengambilan</a> 
    <a asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-refresh"></i> Reload</a>
  
  
  <br/>
    <br/>
    <div class="row">
        <div class="table-responsive">

                <table id="table" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                           
                            <th>
                                @Html.DisplayNameFor(model => model.Tanggal)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Material_no)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Qty)
                            </th>
                            <th style="width:300px">
                                @Html.DisplayNameFor(model => model.Nama_pengambil)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Area)
                            </th>
                            <th style="width:300px">
                                @Html.DisplayNameFor(model => model.Keterangan)
                            </th>

                            <th style="width:100px">Aksi</th>
                        
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                                <tr>
                                  
                                   <td>
                                        @Html.DisplayFor(modelItem => item.Tanggal)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Material_no)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Qty)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nama_pengambil)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Area)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Keterangan)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-sm btn-primary" style="color:white"><i class="glyphicon glyphicon-pencil"></i></a> 
                                     
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
                                    </td>
                                 
                                    
                                </tr>
                        }
                       
                           
                    </tbody>
                
                </table>
        </div>
	</div>
</div>



